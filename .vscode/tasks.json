{
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "D:/Compilers/bin/g++.exe",
            "args": [
                "-std=c++11",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "D:/Compilers/bin"
            }
        },
        {
            "type": "shell",
            "label": "gcc.exe build active file",
            "command": "D:\\Compilers\\bin\\gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "D:\\Compilers\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}